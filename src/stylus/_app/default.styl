// -- Header  
.header
  position: relative
  height: 100%
  overflow: hidden
  background: bg('img/bg-surfer.jpg')
  
  @media phone
    font-size: 90%
  
  &:after
    content: ''
    position: absolute
    bottom: 0
    display: block
    width: 100%
    height: 50px
    background: bg('img/tint.png') center bottom no-repeat
    z-index: 20
    
  &:before
    content: ''
    position: absolute
    bottom: 0
    top: 0
    left: 0
    right: 0
    display: block
    opacity: .15
    background: bg('img/texture.jpg') center bottom no-repeat
    background-size: cover
    z-index: 10
  
#header-video
  position: absolute
  top: 0
  left: 0
  min-width: 100%
  min-height: 100%
  width: auto
  height: auto
  
  @media phone
    display: none

.header-content
  text-align: center
  z-index: 1000
  vertical-center()
  
  @media phone
    position: static
    transform: none
  
.header-logo
  margin: -2em 0 0 0
  padding: 0
  width: 24em
  height: 18em
  background: bg('svg/logo-fif-2015.svg') center center no-repeat
  background-size: 70%
  text-indent: -9999em
  
  @media phone
    width: 100%
    height: 17em
    margin-top: 2em
    background-size: 65%

.header-metadata
  margin: 0 auto
  padding: 0
  display: block
  text-align: center
  font-size: 4em
  font-weight: 900
  color: #fff
  line-height: 1.6em
  text-transform: uppercase
  
  @media phone
    font-size: 2.5em
    
.button-buy
  display: inline-block
  background: $color-action
  color: #fff
  text-decoration: none
  padding: .8em 2em
  font-size: 2em
  font-weight: bold
  text-transform: uppercase
  border-radius: 2em
  margin-top: 1.6em
  z-index: 200
  transition: background .5s ease
  
  &:hover
    background: lighten(@background, 20%)

  @media phone
    font-size: 1.8em
